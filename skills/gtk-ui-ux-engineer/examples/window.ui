<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <!-- Modern GTK4 Application Window Template -->
  <!-- Demonstrates best practices:
       - AdwApplicationWindow for GNOME integration
       - Header bar with actions
       - Responsive design with AdwBreakpoint
       - ViewStack for navigation
       - Proper spacing and layout
  -->

  <template class="ExampleWindow" parent="AdwApplicationWindow">
    <property name="default-width">800</property>
    <property name="default-height">600</property>
    <property name="title">GTK UI/UX Example</property>

    <!-- Responsive breakpoint for compact layouts -->
    <child>
      <object class="AdwBreakpoint">
        <condition>max-width: 600sp</condition>
        <property name="width-request">360</property>
      </object>
    </child>

    <property name="content">
      <object class="AdwToolbarView">
        <!-- Header bar with standard GNOME pattern -->
        <child type="top">
          <object class="AdwHeaderBar">
            <!-- Start: Primary action buttons -->
            <child type="start">
              <object class="GtkButton">
                <property name="icon-name">document-new-symbolic</property>
                <property name="tooltip-text">New (Ctrl+N)</property>
                <signal name="clicked" handler="on_new_clicked" swapped="no"/>
              </object>
            </child>

            <!-- Center: Window title -->
            <property name="title-widget">
              <object class="AdwViewSwitcherTitle">
                <property name="title">Example App</property>
              </object>
            </property>

            <!-- End: Secondary actions and menu -->
            <child type="end">
              <object class="GtkMenuButton">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="primary">True</property>
                <property name="popover">
                  <object class="GtkPopoverMenu">
                    <property name="menu-model">primary_menu</property>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </child>

        <!-- Main content area -->
        <property name="content">
          <object class="AdwLeaflet" id="main_leaflet">
            <!-- Sidebar with navigation -->
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="width-request">250</property>
                <property name="spacing">6</property>
                <style>
                  <class name="sidebar"/>
                </style>

                <!-- Search entry -->
                <child>
                  <object class="GtkSearchEntry">
                    <property name="placeholder-text">Search...</property>
                  </object>
                </child>

                <!-- Navigation list -->
                <child>
                  <object class="GtkListBox" id="navigation_list">
                    <property name="selection-mode">browse</property>
                    <style>
                      <class name="navigation-sidebar"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>

            <!-- Main content view -->
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">12</property>
                <property name="hexpand">True</property>

                <!-- Status bar -->
                <child>
                  <object class="GtkLabel" id="status_label">
                    <property name="halign">start</property>
                    <style>
                      <class name="caption"/>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>

                <!-- Content cards -->
                <child>
                  <object class="GtkFlowBox">
                    <property name="valign">start</property>
                    <property name="homogeneous">True</property>
                    <property name="max-children-per-line">3</property>

                    <!-- Card 1 -->
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">6</property>
                        <style>
                          <class name="card"/>
                        </style>

                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">folder-symbolic</property>
                            <property name="pixel-size">48</property>
                          </object>
                        </child>

                        <child>
                          <object class="GtkLabel">
                            <property name="label">Projects</property>
                            <style>
                              <class name="title-3"/>
                            </style>
                          </object>
                        </child>

                        <child>
                          <object class="GtkLabel">
                            <property name="label">12 active projects</property>
                            <style>
                              <class name="caption"/>
                              <class name="dim-label"/>
                            </style>
                          </object>
                        </child>

                        <child>
                          <object class="GtkButton">
                            <property name="label">Open</property>
                            <style>
                              <class name="suggested-action"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>

                    <!-- Card 2 -->
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">6</property>
                        <style>
                          <class name="card"/>
                        </style>

                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">emblem-default-symbolic</property>
                            <property name="pixel-size">48</property>
                          </object>
                        </child>

                        <child>
                          <object class="GtkLabel">
                            <property name="label">Recent</property>
                            <style>
                              <class name="title-3"/>
                            </style>
                          </object>
                        </child>

                        <child>
                          <object class="GtkLabel">
                            <property name="label">5 recent files</property>
                            <style>
                              <class name="caption"/>
                              <class name="dim-label"/>
                            </style>
                          </object>
                        </child>

                        <child>
                          <object class="GtkButton">
                            <property name="label">View All</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>

        <!-- Status bar (optional, at bottom) -->
        <child type="bottom">
          <object class="GtkActionBar">
            <child>
              <object class="GtkLabel" id="progress_label">
                <property name="label">Ready</property>
              </object>
            </child>

            <child type="end">
              <object class="GtkButton">
                <property name="icon-name">emblem-ok-symbolic</property>
                <style>
                  <class name="success"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
  </template>

  <!-- Application menu -->
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label">_New Window</attribute>
        <attribute name="action">app.new-window</attribute>
        <attribute name="accel">&lt;Primary&gt;n</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label">_Preferences</attribute>
        <attribute name="action">app.preferences</attribute>
        <attribute name="accel">&lt;Primary&gt;comma</attribute>
      </item>
      <item>
        <attribute name="label">_Keyboard Shortcuts</attribute>
        <attribute name="action">app.shortcuts</attribute>
        <attribute name="accel">&lt;Primary&gt;question</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label">_About Example</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
